@model FinProj.Models.UserClass

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Registration Form</h1>

<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pword" class="control-label"></label>
                <input asp-for="Pword" class="form-control" type ="password" />
                <span asp-validation-for="Pword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CnfPWord" class="control-label"></label>
                <input asp-for="CnfPWord" class="form-control" type ="password" />
                <span asp-validation-for="CnfPWord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UEmail" class="control-label"></label>
                <input asp-for="UEmail" class="form-control" />
                <span asp-validation-for="UEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <!--<input asp-for="Gender" class="form-control" />-->

                <input type="radio" name=" Gender" value="M" />Male
                <input type="radio" name=" Gender" value="F" />Female

                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaritalStat" class="control-label"></label>
                <input asp-for="MaritalStat" class="form-control" />

                <select asp-for="MaritalStat">
                    <option selected disabled>-- Select Marital Status --</option>
                    <option>Married</option>
                    <option>It's Complicated</option>
                    <option>Single</option>
                </select>

                <span asp-validation-for="MaritalStat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save User Record" class="btn btn-primary" />
            </div>
            <b>ViewBag.message</b>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
